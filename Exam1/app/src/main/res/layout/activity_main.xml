<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/rock_button"
        android:layout_width="70dp"
        android:layout_height="69dp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="89dp"
        android:text="👊🏼"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/user_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2" />

    <Button
        android:id="@+id/paper_button"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="38dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="38dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="89dp"
        android:text="🖐🏼"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/computer_score"
        app:layout_constraintEnd_toStartOf="@+id/scissors_button"
        app:layout_constraintStart_toEndOf="@+id/rock_button"
        app:layout_constraintTop_toBottomOf="@+id/title2" />

    <Button
        android:id="@+id/scissors_button"
        android:layout_width="69dp"
        android:layout_height="73dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="87dp"
        android:text="✌🏼"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2" />

    <TextView
        android:id="@+id/title"
        android:layout_width="291dp"
        android:layout_height="42dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="33dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="33dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:text="Rock, Paper, Scissors"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/title2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="174dp"
        android:layout_height="30dp"
        android:layout_marginEnd="88dp"
        android:layout_marginLeft="122dp"
        android:layout_marginRight="88dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="35dp"
        android:text="Make your selection!"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/score_user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="131dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="71dp"
        android:text="User:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rock_button" />

    <TextView
        android:id="@+id/computer_score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="131dp"
        android:layout_marginEnd="11dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="11dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="71dp"
        android:text="PC:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/computer_score"
        app:layout_constraintStart_toEndOf="@+id/user_score"
        app:layout_constraintTop_toBottomOf="@+id/paper_button" />

    <TextView
        android:id="@+id/user_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:layout_marginEnd="56dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="56dp"
        android:layout_marginStart="12dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/computer_score_title"
        app:layout_constraintStart_toEndOf="@+id/score_user_title" />

    <TextView
        android:id="@+id/computer_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:layout_marginEnd="170dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="170dp"
        android:layout_marginStart="17dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/computer_score_title" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="243dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="243dp"
        android:layout_marginTop="136dp"
        android:text="Reset game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scissors_button" />

</android.support.constraint.ConstraintLayout>